generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model barber{
  id Int @id @default(autoincrement())
  name String 
  email String
  phone Int
  username String
  password String
}

model client {
  id Int @id @default(autoincrement())
  name String
  email String
  phone Int
  username String
  password String
  plan plan?
}

model plan {
  id Int @id @default(autoincrement())
  value Decimal
  haircutNumber Int
  client client @relation(fields: [idClient],references: [id])
  idClient Int @unique
}